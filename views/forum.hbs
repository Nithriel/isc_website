<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
    {{> menu}}
    <div id="message_container">
        <div class="register_add row">
            <div class="col-3">
                <h1>{{heading}}</h1>
            </div>
            {{#if (isAdmin user.type)}}
                <div class="col-2 offset-7">
                    <a href="/{{genre}}/new_post">
                        <input type="button" style="margin-top: 10px" class="btn btn-dark" value="New Post"/>
                    </a>
                </div>

            {{else}}
                    <!--<a href="/registration" class="col-10 offset-7" style="margin: 15px 0 0;">Register a new account to start posting!</a>-->
            {{/if}}
        </div>
        <hr>

        <div class="row">
            {{#each message}}
                <div class="card m-1 box" style="width: 18rem; position: relative;">
                    <img class="card-img-top" style="width: 286px; height: 180px" src="{{image_link}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{event_date}}</p>
                        <a href="/thread/{{_id}}" class="btn btn-primary">Details</a>
                    </div>
                </div>
                <!--<a href="/thread/{{_id}}" class="list-group-item list-group-item-action">{{title}}-->
                    <!--<p class="poster">Posted by: {{username}} on {{date}}</p>-->
                <!--</a>-->
            {{/each}}
        </div>
    </div>

